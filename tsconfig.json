{
  "compilerOptions": {
    "module": "commonjs",
    "allowJs": true,
    "target": "es2017",
    "outDir": "./dist",
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "lib": ["ES2015", "DOM", "DOM.Iterable"]
  },
  "include": ["./contracts/**/*"],
  "exclude": ["node_modules", "dist"],
  "strict": true,
  "strictNullChecks": true,
  "strictFunctionTypes": true,
  "strictBindCallApply": true,
  "strictPropertyInitialization": true,
  "noImplicitThis": true,
  "alwaysStrict": true
}
